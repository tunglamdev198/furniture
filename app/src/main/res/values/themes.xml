<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Furniture" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary</item>
        <item name="colorOnPrimary">@color/primary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/primary</item>
        <item name="colorSecondaryVariant">@color/primary</item>
        <item name="colorOnSecondary">@color/primary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="TextBold" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/open_sans</item>
        <item name="android:textColor">@color/textBlack</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="TextRegular" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/open_sans</item>
        <item name="android:textColor">@color/textBlack</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="TextBold10" parent="TextBold">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="TextBold12" parent="TextBold">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextBold14" parent="TextBold">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextBold16" parent="TextBold">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextBold20" parent="TextBold">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextBold32" parent="TextBold">
        <item name="android:textSize">32sp</item>
    </style>

    <style name="TextRegular10" parent="TextRegular">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="TextRegular12" parent="TextRegular">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextRegular14" parent="TextRegular">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextRegular16" parent="TextRegular">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextRegular20" parent="TextRegular">
        <item name="android:textSize">20sp</item>
    </style>

    <!--    Edit Text-->
    <style name="NormalEditText" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/normal_edit_text_height</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
        <item name="backgroundTint">@color/gray</item>
        <item name="android:drawablePadding">@dimen/space_12</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="fontFamily">@font/open_sans</item>
        <item name="android:textColor">@color/textBlack</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="OTPBox" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_enter_pin</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">32sp</item>
        <item name="android:inputType">number</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLength">1</item>
        <item name="fontFamily">@font/open_sans</item>
        <item name="android:textColor">@color/textBlack</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <!--    Button-->

    <style name="BlueButton" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/normal_button_height</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/bg_button</item>
        <item name="android:drawablePadding">@dimen/space_12</item>
        <item name="fontFamily">@font/open_sans</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:includeFontPadding">false</item>
    </style>

</resources>