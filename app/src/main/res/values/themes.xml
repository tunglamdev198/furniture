<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Furniture" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary</item>
        <item name="colorOnPrimary">@color/primary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/primary</item>
        <item name="colorSecondaryVariant">@color/primary</item>
        <item name="colorOnSecondary">@color/primary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="TextBold" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/open_sans</item>
        <item name="android:textColor">@color/textBlack</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="TextBold10" parent="TextBold">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="TextBold12" parent="TextBold">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextBold14" parent="TextBold">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextBold16" parent="TextBold">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextBold20" parent="TextBold">
        <item name="android:textSize">20sp</item>
    </style>

</resources>