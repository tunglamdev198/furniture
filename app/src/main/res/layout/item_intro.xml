<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="introItem"
            type="com.lamnt.furniture.model.dto.IntroItem" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            loadImageResource="@{introItem.src}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_intro_1" />

        <TextView
            style="@style/TextBold20"
            android:layout_marginTop="@dimen/large_space"
            android:text="@{introItem.title}" />

        <TextView
            style="@style/TextRegular16"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="@dimen/large_space"
            android:layout_marginTop="@dimen/large_space"
            android:text="@{introItem.notice}" />

    </LinearLayout>

</layout>